        },
        {
            "name": "mingw-x64-release-static",
            "displayName": "MinGW x64 Release Static",
            "inherits": "mingw-x64-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "DIRA_MINGW_ENABLE_STATIC_LINK": true
            }
        }
    ]
}
